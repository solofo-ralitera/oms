    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'oms'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=oms",
                    "--package=oms"
                ],
                "filter": {
                    "name": "oms",
                    "kind": "bin"
                }
            },
            "args": ["read", "/home/solofo/Videos/text.txts"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'oms'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=oms",
                    "--package=oms"
                ],
                "filter": {
                    "name": "oms",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}